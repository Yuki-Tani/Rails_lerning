<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
  <div class="stats_item">
    <strong id="favorites-<%= @user.id %>" class="stat">
      <%= @user.fav_posts.count %>
    </strong>
    favorites
  </div>
  <div class="stats_item">
    <strong id="stars-<%= @user.id %>" class="stat">
      <%= @user.microposts.joins(:favorites).count %>
    </strong>
    stars
  </div>
</div>
